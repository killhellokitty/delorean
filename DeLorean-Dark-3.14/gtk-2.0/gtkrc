            shadow          		= OUT
            overlay_file    		= "Others/null.png"
            overlay_stretch 		= FALSE
        }
	image 
	{
            function        		= CHECK
            recolorable     		= TRUE
	    state	 		= NORMAL
            shadow          		= IN
            overlay_file    		= "Check-Radio/menu-check.svg"
            overlay_stretch	 	= FALSE
        }
	image 
	{
            function        		= CHECK
            recolorable     		= TRUE
            state                       = PRELIGHT
            shadow          		= IN
            overlay_file    		= "Check-Radio/menu-check-hover.svg"
