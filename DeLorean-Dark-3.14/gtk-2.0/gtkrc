	    state 			= INSENSITIVE
            shadow          		= IN
            overlay_file    		= "Check-Radio/menu-radio-insensitive.svg"
            overlay_stretch 		= FALSE
        }
	image 
      	{
            function                    = SHADOW # This fixes boxy Qt menu items
	    file        		= "Others/null.png"
	    border      		= { 4, 4, 4, 4 }
	    stretch         	        = TRUE
      	}

	# Arrow Buttons

	image
	{
	  function			= ARROW
	  state				= NORMAL
